	"Create questionMark Function": {
		"prefix": "?",  // 觸發片段的前綴
		"body": [
			"<?php",
			"${1:} //to do",
			"?>"
		],
		"description": "創建一個 PHP 函數"
	}


		"Create foreach Function": {
			"prefix": "foreachc",  // 觸發片段的前綴
			"body": [
				"foreach(\\$class as \\$value){",
				"${1:} //to do",
				"}"
			],
			"description": "創建一個 PHP 函數"
		}

		"Create Table Style": {
			"prefix": "tablestyle",  // 觸發片段的前綴
			"body": [
				"<style>",
				"table{",
				"	border-collapse:collapse;",
				"",
				"}",
				"td{",
				"	padding:6px 10px;",
				"	text-align: center;",
				"	border:1px solid #ccc;",
				"}",
				"</style>",
				""
			],
			"description": "創建一個 tablestyle"
		}


		"Print Function": {
		"prefix": "printFunc",
		"body": [
			"function printMessage(message) {",
			"    console.log(message);",
			"}"
		],
		"description": "Simple function to print a message to the console"
	}

	"Function with Parameters": {
		"prefix": "funcParams",
		"body": [
			"function ${1:funcName}(${2:params}) {",
			"\t$0",
			"}"
		],
		"description": "Function with dynamic name and parameters"
	}

		"Create PHP Function": {
			"prefix": "phpfun",  // 觸發片段的前綴
			"body": [
				"function ${1:functionName}(${2:params}) {",
				"    ${3:// code here}",
				"}"
			],
			"description": "創建一個 PHP 函數"
		}

}